<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">
<!--sidux Gaia GDM Theme -->
<greeter>
    <!-- background -->
  <item type="pixmap">
    <normal file="background.png"/>
    <pos x="0" y="0" width="100%" height="100%"/>
    </item>
    <item type="pixmap">
        <normal file="sidux-logo.png"/>
        <pos x="-20" y="-40" anchor="se"/>
    </item>
  <item type="rect">
    <normal/>
    <pos x="0" y="1%" width="100%" height="5%"/>
    <fixed>
        <item type="pixmap">
            <normal file="topbar.png"/>
            <pos anchor="c" x="50%" y="0%" width="100%"/>
        </item>
      <item type="rect">
        <normal  />
        <pos x="70%" y="4" width="30%" height="100%"/>
        <box orientation="horizontal" spacing="10" xpadding="10">
          <item type="rect" id="language_button" button="true">
            <normal />
        <pos y="50%" anchor="e" width="box" height="box"/>
            <box orientation="horizontal" spacing="10" xpadding="10">
          <item type="pixmap">
            <normal file="arrow.png" tint="#dddddd"/>
            <prelight file="arrow.png"/>
            <active file="arrow.png" tint="#bbbbbb" />
            <pos y="50%" anchor="w"/>
          </item>
          <item type="label">
            <normal color="#FFFFFF" font="Sans Bold 12"/>
        <prelight color="#d2d2b6" font="Sans Bold 12"/>
        <active color="#FFFFFF" font="Sans Bold 12"/>
            <pos y="50%" anchor="w"/>
        <stock type="language" />
          </item>
            </box>
          </item>
          <item type="rect" id="session_button" button="true">
            <normal />
        <pos y="50%" anchor="e" width="box" height="box"/>
            <box orientation="horizontal" spacing="10" xpadding="10">
          <item type="pixmap">
            <normal file="arrow.png" tint="#dddddd"/>
            <prelight file="arrow.png"/>
            <active file="arrow.png" tint="#bbbbbb"/>
            <pos y="50%" anchor="w"/>
          </item>
          <item type="label">
            <normal color="#FFFFFF" font="Sans Bold 12"/>
        <prelight color="#d2d2b6" font="Sans Bold 12"/>
        <active color="#FFFFFF" font="Sans Bold 12"/>
            <pos y="50%" anchor="w"/>
        <stock type="session" />
          </item>
            </box>
          </item>
          <item type="rect" id="system_button" button="true">
            <normal />
        <show modes="console" type="system"/>
        <pos y="50%" anchor="e" width="box" height="box"/>
            <box orientation="horizontal" spacing="10" xpadding="10">
          <item type="pixmap">
            <normal file="arrow.png" tint="#dddddd"/>
            <prelight file="arrow.png"/>
            <active file="arrow.png" tint="#bbbbbb"/>
            <pos y="50%" anchor="w"/>
          </item>
          <item type="label">
            <normal color="#FFFFFF" font="Sans Bold 12"/>
        <prelight color="#d2d2b6" font="Sans Bold 12"/>
        <active color="#FFFFFF" font="Sans Bold 12"/>
            <pos y="50%" anchor="w"/>
        <stock type="system"/>
          </item>
            </box>
          </item>
          <item type="rect" id="disconnect_button" button="true">
            <normal />
        <show modes="flexi,remote"/>
        <pos y="50%" anchor="w" width="box" height="box"/>
            <box orientation="horizontal" spacing="10" xpadding="10">
          <item type="pixmap">
            <normal file="icon-shutdown.png" tint="#dddddd"/>
            <prelight file="icon-shutdown.png"/>
            <active file="icon-shutdown.png" tint="#bbbbbb"/>
            <pos y="50%" anchor="w"/>
          </item>
          <item type="label">
            <normal color="#FFFFFF" font="Sans Bold 12"/>
        <prelight color="#d2d2b6" font="Sans Bold 12"/>
        <active color="#FFFFFF" font="Sans Bold 12"/>
            <pos y="50%" anchor="w"/>
            <stock type="disconnect"/>
        <show modes="remote"/>
          </item>
          <item type="label">
            <normal color="#FFFFFF" font="Sans Bold 12"/>
        <prelight color="#d2d2b6" font="Sans Bold 12"/>
        <active color="#FFFFFF" font="Sans Bold 12"/>
            <pos y="50%" anchor="w"/>
            <stock type="quit"/>
        <show modes="flexi"/>
          </item>
            </box>
          </item>
        </box>
      </item>
    </fixed>
</item>

    <!-- container for username password etc. -->
    <item type="rect">
        <pos x="4" y="1%" width="474" height="50" anchor="nw"/>
            <!-- username label -->
            <box orientation="horizontal" spacing="10" xpadding="10">
		<item type="label" id="pam-prompt">
                    <pos y="50%" anchor="w"/>
                    <normal font="Sans Bold 12" color="#ffffff"/>
                    <stock type="username-label"/>
                </item>
            <!-- user-pw-entry background pixmap -->
	    <!--
            <item type="pixmap">
                <pos x="90" y="5" width="300" height="40"/>
                <normal file="userentry.png"/>
            </item>
	    -->
            <!-- user-pw-entry -->
            <item type="entry" id="user-pw-entry">
                <pos y="50%" width="200" height="20" anchor="w"/>
                <normal font="Sans Bold 12" color="#000000"/>
            </item>
        </box>
    </item>
    <!-- container for labels etc. -->
    <item type="rect">
        <pos x="4%" y="14%" width="474" height="334" anchor="nw"/>
        <box orientation="vertical">

            <!-- welcome -->
            <item type="label" id="welcome-label">
                <pos x="7" y="0" />
                <normal font="Sans Bold 18" color="#ffffff"/>
                <stock type="welcome-label"/>
            </item>

		<!-- clock important -->
		  <item type="label" id="clock">
		     <normal color="#ffffff" font="Sans Bold 11"/>
		     <pos x="7" y="30" anchor="w"/>
		     <text>%c</text>
		  </item>
		<!-- clock -->
        </box>
    </item>

    <!-- caps-lock-warning -->
    <item type="rect" id="caps-lock-warning">
        <normal color="#ffffff" alpha="0.2"/>
        <pos x="0" y="0" width="100%" height="box" anchor="nw"/>
        <box orientation="vertical" min-width="250" xpadding="10" ypadding="13" spacing="0">
            <item type="label">
                <normal color="#000000" font="Sans Bold 12"/>
                <pos x="50%" y="50%" anchor="c"/>
                <stock type="caps-lock-warning"/>
            </item>
        </box>
    </item>

    <!-- pam-error (login failure etc.) -->
    <item type="rect" id="pam-error">
        <pos x="0" y="50%" width="100%" height="box" anchor="sw"/>
        <box orientation="vertical" min-width="250" xpadding="10" ypadding="5" spacing="0">
            <item type="label" id="pam-error">
                <normal color="#FFFFFF" font="Sans Bold 12"/>
                <pos x="50%" y="50%" anchor="c"/>
            <text></text>
            </item>
        </box>
    </item>

</greeter>
