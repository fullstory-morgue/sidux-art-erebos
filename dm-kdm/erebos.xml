<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">
<greeter>
	
	<!-- main pic, login pic -->
	<item type="pixmap">
		<normal file="background.png"/>
		<pos x="0" y="0" width="100%" height="100%"/>
				
		<item type="pixmap">
			<normal file="sidux-logo.png"/>
			<pos anchor="se" x="-20" y="-40"/>
		</item>	
		
		<item type="rect">
			<pos anchor="w" x="0%" y="3%" width="100%" height="5%"/>

			<item type="pixmap">
				<normal file="topbar.png"/>
				<pos anchor="c" x="50%" y="0%" width="100%"/>
			</item>	

			<!-- username-label -->
			<item type="label">
				<pos anchor="w" x="7" y="21"/>
				<normal color="#FFFFFF" font="Verdana 12"/>
				<stock type="username-label"/>
			</item>
			
			<!-- password-label -->
			<item type="label">
				<pos anchor="w" x="235" y="21"/>
				<normal color="#FFFFFF" font="Verdana 12"/>
				<stock type="password-label"/>
			</item>
				
			<!-- username-entry -->
			<item type="entry" id="user-entry">
				<pos anchor="c" x="150" y="21" height="23" width="135"/>
			</item>
			
			<!-- password-entry -->
			<item type="entry" id="pw-entry">
				<pos anchor="c" x="375" y="21" height="23" width="135"/>
			</item>
			
			<!-- Login button -->
			<item type="rect" id="login_button" button="true">	
				<pos x="450" y="5" width="30" height="40"/>
				<item type="pixmap">
					<normal file="gobutton.png" tint="#dddddd"/>
					<prelight file="gobutton.png"/>
					<pressed file="gobutton.png" tint="#bbbbbb"/>
				</item> 
    			</item>

			<!-- Welcome on ... -->
			<item type="label">
				<pos anchor="w" x="15" y="90"/>
                                <normal color="#FFFFFF" font="Verdana 18"/>
				<stock type="welcome-label"/>
			</item>
	
			<item type="label" id="clock">
				<normal color="#FFFFFF" font="Verdana 11"/>
				<pos anchor="w" x="15" y="120"/>		
				<text>%c</text>
			</item>
	
			<!-- Login-Error -->
			<item type="label" id="pam-error">
				<pos anchor="w" x="15" y="73"/>
				<normal color="#ffffff" font="Verdana 13"/>
				<text></text>
			</item>
		
			<!-- capslock-warning -->
			<item type="label" id="caps-lock-warning">
				<pos anchor="w" x="15" y="60"/>
				<normal color="#ff3c00" font="Verdana 13"/>
				<stock type="caps-lock-warning"/>
			</item>
			
			
			<item type="rect" id="session_button" button="true">
				<pos x="85%" y="20" width="10%" height="4%"/>
				<item type="pixmap">
					<pos anchor="c" y="4" x="3"/>
					<normal file="arrow.png" tint="#dddddd"/>
					<prelight file="arrow.png"/>
					<pressed file="arrow.png" tint="#bbbbbb"/>
				</item> 				
				<item type="label">
					<normal color="#FFFFFF" font="Verdana 12"/>
					<prelight color="#DFD8AF" font="Verdana 12"/>
					<active color="#000000" font="Verdana 12"/>
					<pos anchor="c" y="4" x="62"/>
					<stock type="session"/>
				</item>
			</item>
			
			<!-- menu-button -->
			<item type="rect" id="system_button" button="true">
				<show modes="console" type="system"/>
				<pos x="76%" y="20" width="6%" height="4%"/>
				<item type="pixmap">
					<pos anchor="c" y="4" x="3"/>
					<normal file="arrow.png" tint="#dddddd"/>
					<prelight file="arrow.png"/>
					<pressed file="arrow.png" tint="#bbbbbb"/>
				</item> 				
				<item type="label">
					<normal color="#FFFFFF" font="Verdana 12"/>
					<prelight color="#DFD8AF" font="Verdana 12"/>
					<active color="#000000" font="Verdana 12"/>
					<pos anchor="c" y="4" x="37"/>
					<stock type="system"/>
				</item>
			</item>
		</item>
	</item>			
		

	
	
	<item type="rect" id="disconnect_button" button="true">
		<show modes="flexi,remote"/>
		<pos x="81%" y="92%" width="32" height="60"/>
		<item type="pixmap">
			<pos anchor="c" y="36" x="0"/>
			<normal file="options.png"/>
			<prelight file="options.png"/>
			<pressed file="options.png"/>
		</item> 				
		<item type="label">
			<normal color="#B3B938" font="Verdana 11"/>
			<prelight color="#FFFFFF" font="Verdana 11"/>
			<active color="#000000" font="Verdana 11"/>
			<pos anchor="c" y="36" x="30"/>
			<stock type="disconnect"/>
	        	<show modes="remote"/>
		</item>
		<item type="label">
			<normal color="#B3B938" font="Verdana 11"/>
			<prelight color="#FFFFFF" font="Verdana 11"/>
			<active color="#000000" font="Verdana 11"/>
			<pos anchor="c" y="10" x="0%"/>
			<stock type="quit"/>
	        	<show modes="flexi"/>
		</item>
	</item>
	
</greeter>
